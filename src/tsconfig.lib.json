{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es2015",
    "baseUrl": ".",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [ "globalize", "node" ]
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "flatModuleOutFile": "index.js",
    "skipTemplateCodegen": true,
    "flatModuleId": "@code-art/angular-globalize"
  },
  "files": [
    "./module.ts"
  ]
}
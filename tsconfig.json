{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "noEmit": true,
    "lib": [
      "es5",
      "dom"
    ],
    "target": "es5",
    "skipLibCheck": true,
    "types": ["globalize", "node"],
    "paths": {
      "@code-art/angular-globalize": [ "module.ts" ]
    }
  },
  "exclude": ["dist", "node_modules", "obj", "bin", "build", "playground", "test"]
}